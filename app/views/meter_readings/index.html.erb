<%- model_class = MeterReading -%>
<div class="page-header">
  <h1><%=t '.title', :default => MeterReading %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:read_at) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meter_readings.each do |meter_reading| %>
      <tr>
        <td><%= meter_reading.id %></td>
        <td><%= meter_reading.value %></td>
        <td><%= meter_reading.read_at %></td>
        <td><%= meter_reading.unit %></td>
        <td><%=l meter_reading.created_at, format: :long %></td>
        <td>
          <%= link_to meter_reading_path(meter_reading), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to meter_reading_path(meter_reading), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_meter_reading_path,
            :class => 'btn btn-primary' %>
